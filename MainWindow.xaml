<Window x:Class="Registro_prestamo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Registro_prestamo"
        mc:Ignorable="d"
        Title="Menu principal" Height="300" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <Menu Height="24">
                <MenuItem Header="Registros">
                    <MenuItem x:Name="rPrestamosMenuItem" Click="rPrestamosMenuItem_Click" Header="Registrar prestamo"/>
                    <MenuItem x:Name="rPersonasMenuItem" Click="rPersonasMenuItem_Click" Header="Registrar persona"/>
                </MenuItem>
            </Menu>
        </StackPanel>
    </Grid>
</Window>
